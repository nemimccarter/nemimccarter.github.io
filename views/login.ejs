<section class="row">
    <div class="div-centered header">
        <h1>Please try to login again!</h1>
        <form action="<% if (locals.fa17g09_env_prefix) { %>/<%= fa17g09_env_prefix %><%}%>/login" method="post" id="needs-validation">
            <div class="form-group">
                <label>Email*</label>
                <input type="text" class="form-control" name="email" placeholder="name@example.com" required>
                <div class="invalid-feedback">
                    Please enter your email.
                </div>
            </div>
            <div class="form-group">
                <label>Password*</label>
                <input type="password" class="form-control" name="password" required>
                <div class="invalid-feedback">
                    Please enter your password.
                </div>
            </div>
        <button type="submit" class="btn btn-primary btn-lg">Log In</button>
        </form>
        <script>
            // Example starter JavaScript for disabling form submissions if there are invalid fields
            (function() {
              'use strict';

              window.addEventListener('load', function() {
                var form = document.getElementById('needs-validation');
                form.addEventListener('submit', function(event) {
                  if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                  }
                  form.classList.add('was-validated');
                }, false);
              }, false);
            })();
        </script>
    </div>
</section>