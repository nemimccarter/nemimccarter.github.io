<section class="container">
    <div class="row tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="listings" role="tabpanel" aria-labelledby="nav-listings-tab">
            <table class="table table-hover table-responsive">
              <tbody>
                <% messages.forEach(function(message) { %>
                    <tr>
                        <td class="message-body">
                            <h5 class="message-contact"> <%= senderToUser.get(message.sender).firstName %> <%= senderToUser.get(message.sender).lastName %> (<%= senderToUser.get(message.sender).email %>) </h5>
                            <p class="message-text">
                                <%= message.content %>
                            </p>
                        </td>
                        <td>
                            <h6 class="message-date"> <%= message.date %> </h6>
                            <!-- <button type="button" class="btn btn-primary message-reply-btn">Reply</button> -->
                        </td>
                    </tr>
                <% }) %>
              </tbody>
            </table>
        </div>
    </div>
</section>
<!-- END Message Board -->
